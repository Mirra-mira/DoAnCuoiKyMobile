<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAvatar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:cardCornerRadius="17.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bottom_nav_profile" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Your Library"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="24sp"
        android:fontFamily="@font/momotrustsans_extrabold"
        app:layout_constraintBottom_toBottomOf="@id/cardAvatar"
        app:layout_constraintStart_toEndOf="@id/cardAvatar"
        app:layout_constraintTop_toTopOf="@id/cardAvatar" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitle"
        app:tint="#FFFFFF" />

    <LinearLayout
        android:id="@+id/layoutFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <TextView
            android:id="@+id/btnPlaylists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_rounded_filled"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Playlists"
            android:textColor="?attr/colorOnPrimary"
            android:fontFamily="@font/momotrustsans_semibold"/>

        <TextView
            android:id="@+id/btnArtists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_border"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Artists"
            android:textColor="?attr/colorOnPrimary"
            android:fontFamily="@font/momotrustsans_semibold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnSort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutFilters">
        <ImageView
        android:id="@+id/imgSortIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@android:drawable/ic_menu_sort_by_size"
        app:tint="?attr/colorOnPrimary" />

        <TextView
            android:id="@+id/tvSortLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Recently played"
            android:textColor="?attr/colorOnPrimary"
            android:fontFamily="@font/momotrustsans_regular"
            android:textSize="14sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLibrary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSort" />
</androidx.constraintlayout.widget.ConstraintLayout>