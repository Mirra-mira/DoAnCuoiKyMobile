<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <!-- TopBar XML – cố định ở trên cùng -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:background="?attr/colorSurface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/momotrustsans_extrabold"
            android:text="Home"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="30sp"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/home_noti"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_home_noti"
            app:tint="?attr/colorOnPrimary"/>

        <ImageView
            android:id="@+id/home_history"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_home_history"
            app:tint="?attr/colorOnPrimary"/>

        <ImageView
            android:id="@+id/home_settings"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_home_settings"
            app:tint="?attr/colorOnPrimary"/>
    </LinearLayout>

    <!-- ComposeView – nằm dưới TopBar -->
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/HomeScreenComposeView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>